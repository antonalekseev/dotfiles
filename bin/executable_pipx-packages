#!/bin/sh

PIPX_PATH=$(which pipx)
if [ ! -x "$PIPX_PATH" ]; then
	echo "error: pipx is not installed"
	exit 1
fi

[ -d "$VENVS/pipenv" ] || pipx install --spec 'git+https://github.com/pypa/pipenv.git@master' pipenv
[ -d "$VENVS/cookiecutter" ] || pipx install cookiecutter
[ -d "$VENVS/pre-commit" ] || pipx install pre-commit
[ -d "$VENVS/speedtest-cli" ] || pipx install speedtest-cli
