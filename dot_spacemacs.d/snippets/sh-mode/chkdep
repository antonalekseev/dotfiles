# -*- mode: snippet -*-
# name: chkdep
# key: chkdep
# expand-env: ((yas-indent-line nil))
# --

chkdep() {
	missing=""
	for bin in "\$@"; do
		command -v "\$bin" 1>&2 >/dev/null || missing="\${missing}\$bin, "
	done
	[ -z "$missing" ] || \
		die "this program needs '${missing%%, }' to run, exiting." 2
}